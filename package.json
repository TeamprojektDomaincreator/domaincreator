{
  "name": "dxf-playground",
  "version": "1.0.0",
  "description": "Simple program to test out loading a dxf file",
  "main": "public/index.html",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outdir=public",
    "serve": "esbuild src/main.ts --bundle --outdir=public --servedir=public  --serve --watch",
    "pretty": "prettier --config ./prettierrc.json --write \"src/*.ts\""
  },
  "author": "Timothy Hale",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "0.20.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3"
  }
}
